{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "macrodata",
  "main": "src/index.ts",
  "compatibility_date": "2025-01-20",
  "compatibility_flags": [
    "nodejs_compat"
  ],
  // Workers AI for embeddings + cheap tasks
  "ai": {
    "binding": "AI",
  },
  // Vectorize for semantic search
  "vectorize": [
    {
      "binding": "VECTORIZE",
      "index_name": "macrodata-memory",
    },
  ],
  // Durable Objects for per-user state + scheduling
  "durable_objects": {
    "bindings": [
      {
        "name": "MCP_OBJECT",
        "class_name": "MemoryAgent",
      },
    ],
  },
  "migrations": [
    {
      "tag": "v1",
      "new_sqlite_classes": [
        "MemoryAgent"
      ],
    },
  ],
  // Enable observability
  "observability": {
    "enabled": true,
  },
  "vars": {
    "ENVIRONMENT": "development",
    // AI Gateway config (for external model providers)
    "CF_AIG_GATEWAY_ID": "outie",
  },
  // Secrets (set via wrangler secret put):
  // - BRAVE_SEARCH_API_KEY: For web search
  // - CF_API_TOKEN: For AI Gateway auth (BYOK) + Browser Rendering API
  // - ANTHROPIC_API_KEY: Optional, for Anthropic models (or use BYOK via gateway)
  //
  // Access JWT validation (optional - set to require Cloudflare Access):
  // - ACCESS_TEAM_DOMAIN: Your team domain (e.g., "https://myteam.cloudflareaccess.com")
  // - ACCESS_POLICY_AUD: The Application Audience (AUD) tag from your Access app
}