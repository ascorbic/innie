{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "macrodata",
  "main": "src/index.ts",
  "compatibility_date": "2025-01-20",
  "compatibility_flags": [
    "nodejs_compat"
  ],
  // Workers AI for embeddings + cheap tasks
  "ai": {
    "binding": "AI",
  },
  // Vectorize for semantic search
  "vectorize": [
    {
      "binding": "VECTORIZE",
      "index_name": "macrodata-memory",
    },
  ],
  // Durable Objects for per-user state + scheduling
  "durable_objects": {
    "bindings": [
      {
        "name": "MCP_OBJECT",
        "class_name": "MemoryAgent",
      },
    ],
  },
  "migrations": [
    {
      "tag": "v1",
      "new_sqlite_classes": [
        "MemoryAgent"
      ],
    },
  ],
  // Enable observability
  "observability": {
    "enabled": true,
  },
  "vars": {
    "ENVIRONMENT": "development",
    // AI Gateway config (for external model providers)
    "CF_AIG_GATEWAY_ID": "outie",
  },
  // Secrets (set via wrangler secret put):
  // - BRAVE_SEARCH_API_KEY: For web search
  // - CF_API_TOKEN: For AI Gateway auth (BYOK) + Browser Rendering API
  // - ANTHROPIC_API_KEY: Optional, for Anthropic models (or use BYOK via gateway)
  //
  // OAuth config (set via wrangler secret put):
  // - GOOGLE_CLIENT_ID: Google OAuth client ID
  // - GOOGLE_CLIENT_SECRET: Google OAuth client secret
  // - GITHUB_CLIENT_ID: GitHub OAuth client ID
  // - GITHUB_CLIENT_SECRET: GitHub OAuth client secret
  // - OAUTH_REDIRECT_BASE: Base URL for OAuth callbacks (e.g., "https://macrodata.your.workers.dev")
}