{
	"name": "@innie-ai/workspace",
	"private": true,
	"version": "1.0.0",
	"description": "Work Innie - Stateful agent for work context",
	"scripts": {
		"check": "pnpm run --filter @innie-ai/* check",
		"test": "pnpm run --filter @innie-ai/* test",
		"build": "pnpm run --filter @innie-ai/* build",
		"format": "prettier --write .",
		"restart-server": "launchctl kickstart -k gui/$(id -u)/gg.mk.innie.opencode-server",
		"restart-scheduler": "launchctl kickstart -k gui/$(id -u)/gg.mk.innie.scheduler",
		"restart": "pnpm restart-server && pnpm restart-scheduler"
	},
	"keywords": [],
	"author": "Matt Kane",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^25.0.7",
		"prettier": "^3.7.4",
		"vitest": "^4.0.17"
	},
	"packageManager": "pnpm@10.27.0",
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild",
			"protobufjs",
			"sharp"
		],
		"patchedDependencies": {
			"agents": "patches/agents.patch"
		}
	}
}