{
  "name": "@innie/hooks",
  "version": "1.0.0",
  "description": "OpenCode plugin hooks for memory and state management",
  "type": "module",
  "main": "dist/index.js",
  "files": ["dist"],
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "build": "tsdown src/index.ts --format esm --dts --clean",
    "dev": "tsdown src/index.ts --format esm --dts --watch",
    "prepublishOnly": "pnpm run build",
    "check": "publint && attw --pack --ignore-rules=cjs-resolves-to-esm",
    "test": "vitest"
  },
  "dependencies": {
    "@innie/memory": "workspace:*"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@opencode-ai/plugin": "^0.1.0",
    "publint": "^0.3.16",
    "tsdown": "^0.18.4",
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "git+github.com:ascorbic/innie.git",
    "directory": "plugins/hooks"
  },
  "homepage": "https://github.com/ascorbic/innie",
  "author": "Matt Kane",
  "license": "MIT"
}
