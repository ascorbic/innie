{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [
    "state/today.md",
    "state/inbox.md",
    "state/commitments.md"
  ],
  "mcp": {
    "memory": {
      "type": "local",
      "command": ["pnpm", "--filter", "@innie/memory"],
      "environment": {
        "INNIE_STATE_PATH": "${workspaceFolder}/state",
        "INNIE_LOGS_PATH": "${workspaceFolder}/logs"
      }
    }
  },
  "plugin": ["./plugins/hooks/dist/index.js"]
}
