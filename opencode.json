{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [
    "state/today.md",
    "state/inbox.md",
    "state/commitments.md"
  ],
  "mcp": {
    "memory": {
      "type": "local",
      "command": ["node", "packages/memory/dist/index.js"],
      "env": {
        "INNIE_STATE_PATH": "${workspaceFolder}/state",
        "INNIE_LOGS_PATH": "${workspaceFolder}/logs"
      }
    }
  },
  "plugins": {
    "hooks": {
      "module": "./plugins/hooks/dist/index.js"
    }
  }
}
